{
    "name": "jak-desktop-app",
    "version": "0.0.1",
    "description": "A Desktop App made by JAK",
    "author": "Jonak Adipta Kalita",
    "license": "MIT",
    "main": "src/index.js",
    "private": true,
    "scripts": {
        "start": "electron .",
        "test": "echo No Tests provided till now.",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "prettier": "prettier **/*.{js,html,css,md,json}",
        "prettier:fix": "prettier --write **/*.{js,html,css,md,json}",
        "package": "npm run package:win && npm run package:linux && npm run package:mac",
        "package:mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/images/logo.icns --prune=true --out=build/darwin",
        "package:win": "electron-packager . jak-desktop-app --overwrite --asar --platform=win32 --arch=ia32 --icon=assets/images/logo.ico --prune=true --out=build/win32 --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"JAK Desktop App\"",
        "package:linux": "electron-packager . jak-desktop-app --overwrite --asar --platform=linux --arch=x64 --icon=assets/images/logo.png --prune=true --out=build/linux",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Jonak-Adipta-Kalita/JAK-Desktop-App.git"
    },
    "keywords": [
        "desktop",
        "app"
    ],
    "bugs": {
        "url": "https://github.com/Jonak-Adipta-Kalita/JAK-Desktop-App/issues"
    },
    "homepage": "https://github.com/Jonak-Adipta-Kalita/JAK-Desktop-App#readme",
    "devDependencies": {
        "electron-packager": "^15.4.0",
        "electron": "^14.0.1",
        "eslint": "^7.32.0",
        "husky": "^7.0.2",
        "prettier": "2.4.1"
    }
}
